@page "/"



@rendermode InteractiveServer


@inject IStringLocalizer<Accounting.Locales.AppResource> Localizer

<div class="row">
    <div class="col-lg-6">
        <div class="mb-3">
            <label class="form-label">@Localizer["FirstName"]:</label>
            <input class="form-control" type="text" @bind="FirstName" />
        </div>
        <div class="mb-3">
            <label class="form-label">@Localizer["Surname"]:</label>
            <input class="form-control" type="text" @bind="Surname" />
        </div>
        <div class="mb-3">
            <label class="form-label">@Localizer["EmailAddress"]:</label>
            <input class="form-control" type="email" @bind="EmailAddress" />
        </div>
        <div class="mb-3">
            <label class="form-label">@Localizer["Password"]:</label>
            <input class="form-control" type="password" @bind="Password" />
        </div>
        <div class="mb-3">
            <button class="btn btn-primary" @onclick="Register">@Localizer["Register"]</button>
        </div>
    </div>
</div>

@code {
    string? FirstName;
    string? Surname;
    string? Password;
    string? EmailAddress;

    protected async Task Register()
    {
        // Implement registration logic here
        // You can use the values of FirstName, Surname, EmailAddress, and Password
    }
}
