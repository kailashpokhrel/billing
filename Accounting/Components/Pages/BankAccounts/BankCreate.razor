@page "/bankaccount/create"
@inject IBankAccountRepo BankAccountRepo
@inject NavigationManager NavigationManager


@using System.Security.Claims;

<PageTitle>@Localizer["CreateBankAccount"]</PageTitle>
<Card>
    <CardHeader>
        @Localizer["CreateBankAccount"]
    </CardHeader>
    <CardBody>
        <BankForm IsEditMode="false" OnValidBankAccountSubmit="AddBankAccount" />
    </CardBody>
</Card>
@code {
    [Inject] protected ToastService ToastService { get; set; }
    [Inject] protected PreloadService PreloadService { get; set; } = default!;


    private async Task AddBankAccount(BankAccount bankaccount)
    {
        try
        {
            PreloadService.Show();





            await BankAccountRepo.CreateBankAccountAsync(bankaccount);
            ToastService.Notify(new(ToastType.Success, $"BankAccount saved successfully."));
            await Task.Delay(2000);
            NavigationManager.NavigateTo("/bankaccount/list");
        }
        catch (Exception ex)
        {
            // handle exception

            ToastService.Notify(new(ToastType.Danger, $"Error: {ex.Message}."));
        }
        finally
        {
            PreloadService.Hide();
        }
    }
}
