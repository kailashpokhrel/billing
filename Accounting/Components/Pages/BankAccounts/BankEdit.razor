@page "/bankaccount/edit/{id:int}"
@inject IBankAccountRepo BankAccountRepo
@inject NavigationManager NavigationManager


@using System.Security.Claims;

<PageTitle>@Localizer["EditBankAccount"]</PageTitle>
<Card>
    <CardHeader>
        @Localizer["EditBankAccount"]
    </CardHeader>
    <CardBody>
        <BankForm IsEditMode="true" BankAccountId="@Id" OnValidBankAccountSubmit="EditBankAccount" />
    </CardBody>
</Card>
@code {
    [Parameter]
    public int Id { get; set; }
    [Inject] protected ToastService ToastService { get; set; }
    [Inject] protected PreloadService PreloadService { get; set; } = default!;
    
    
    private async Task EditBankAccount(BankAccount bankaccount)
    {
        try
        {
            PreloadService.Show();
            
            
            await BankAccountRepo.UpdateBankAccountAsync(bankaccount);
            ToastService.Notify(new(ToastType.Success, $"BankAccount saved successfully."));
            await Task.Delay(2000);
            NavigationManager.NavigateTo("/bankaccounts");

        }
        catch (Exception ex)
        {
            // handle exception

            ToastService.Notify(new(ToastType.Danger, $"Error: {ex.Message}."));
        }
        finally
        {
            PreloadService.Hide();
        }
    }
}
