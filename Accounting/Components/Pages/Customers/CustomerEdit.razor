@page "/customer/edit/{id:int}"
@inject ICustomerRepo CustomerRepo
@inject NavigationManager NavigationManager


@using System.Security.Claims;

<PageTitle>@Localizer["EditCustomer"]</PageTitle>
<Card>
    <CardHeader>
        @Localizer["EditCustomer"]
    </CardHeader>
    <CardBody>
        <CustomerForm IsEditMode="true" CustomerId="@Id" OnValidCustomerSubmit="EditCustomer" />
    </CardBody>
</Card>
@code {
    [Parameter]
    public int Id { get; set; }
    [Inject] protected ToastService ToastService { get; set; }
    [Inject] protected PreloadService PreloadService { get; set; } = default!;
    
    
    private async Task EditCustomer(Customer customer)
    {
        try
        {
            PreloadService.Show();
            
            
            await CustomerRepo.UpdateAsync(customer);
            ToastService.Notify(new(ToastType.Success, $"Customer saved successfully."));
            await Task.Delay(2000);
            NavigationManager.NavigateTo($"/customers");

        }
        catch (Exception ex)
        {
            // handle exception

            ToastService.Notify(new(ToastType.Danger, $"Error: {ex.Message}."));
        }
        finally
        {
            PreloadService.Hide();
        }
    }
}
